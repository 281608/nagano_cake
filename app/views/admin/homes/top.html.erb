<div class="p-3  bg-secondary text-white">
<h2>注文履歴一覧</h2>
</div>
<br />
<table class='table table-bordered'>
  <thead>
   <tr>
    <th></th>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
   <% @order.each do |order| %>
   <tr>
    <td></td>
    <td><%= link_to (l order.created_at), admin_order_path(order.id) %></td>
    <td><%= order.name %></td>
    <td><%= order.order_details.sum{|hash| hash[:quantity]} %></td>
    <td><%= order.status_i18n %></td>
   </tr>
   <% end %>
  </tbody>
  </table>

  <%= paginate @order %>