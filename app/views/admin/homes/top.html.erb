<div class="p-3  bg-secondary text-white">
<h2>注文履歴一覧</h2>
</div>
<table class='table table-hover table-inverse'>
  <thead>
   <tr>
    <th></th>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
   <% @order_details.each do |order_detail| %>
   <tr>
    <td></td>
    <td><%= link_to (l order_detail.created_at), admin_order_path(order_detail.id) %></td>
    <td><%= order_detail.order.name %></td>
    <td><%= order_detail.quantity %></td>
    <td><%= order_detail.making_status_i18n %></td>
   </tr>
   <% end %>
  </tbody>
  </table>

  <%= paginate @order_details %>