<p>商品新規登録</p>

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

<div class="field">
<%= f.label "商品画像" %>
<%= f.file_field :image, accept: "image/*" %>
</div>

<div class="field">
<%= f.label "商品名" %><br />
<%= f.text_field :name %>
</div>

<div class="field">
<%= f.label "商品説明" %><br />
<%= f.text_area :introduction %>
</div>

<div class="field">
<%= f.label "ジャンル" %><br />
<%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
</div>

<div class="field">
<%= f.label "税抜価格" %><br />
<%= f.text_field :price %>円
</div>

<div class="field">
<%= f.label "販売ステータス" %><br />
<%= f.radio_button :is_active, true %>販売中
<%= f.radio_button :is_active, false %>販売停止中
</div>

<div class="actions">
<%= f.submit '新規登録' , class: "btn btn-success"%>
</div>

<% end %>