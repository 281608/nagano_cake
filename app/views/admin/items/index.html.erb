<div class="p-3  bg-secondary text-white">
<h2>商品一覧</h2>
</div>
<table class='table table-hover table-inverse'>
    <tbody>
      <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.is_active ? "販売中" : "販売停止中" %></td>
      </tr>
     <% end %>
    </tbody>
  </table>

  <%= paginate @items %>