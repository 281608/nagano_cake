<div class="p-3  bg-secondary text-white">
<h2>会員一覧</h2>
</div>
<table class='table table-hover table-inverse'>
  <thead>
   <tr>
   <th>会員ID</th>
   <th>氏名</th>
   <th>メールアドレス</th>
   <th>ステータス</th>
   <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
  <% @customers.each do |customer| %>
   <tr>
   <td><%= customer.id %></td>
   <td>
   <%= link_to admin_customer_path(customer.id) do %>
   <%= customer.full_name %>
   <% end %>
   </td>
   <td><%= customer.email %></td>
   <td><%= customer.is_active ? "有効" : "退会" %></td>
   </tr>
   <% end %>
  </tbody>
</table>
