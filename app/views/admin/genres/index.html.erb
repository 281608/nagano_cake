<div class="p-3  bg-secondary text-white">
<h2>ジャンル一覧・追加</h2>
</div>

<br />
<h3>ジャンル名</h3>
<%= form_with model: @new_genre, url: admin_genres_path, method: :post do |f| %>
<%= f.text_field :name %>
  <%= f.submit '新規登録' , class: "btn btn-success"%>
<% end %>

<br />
  <table class="table">
    <tbody>
      <thead>
      <tr>
        <th></th>
        <th>ジャンル</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </tr>
     <% end %>
    </tbody>
  </table>