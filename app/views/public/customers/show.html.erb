<div class="p-3 mb-2 bg-secondary text-white">
<h2>マイページ</h2>
</div>

<h3>登録情報</h3>

<%= link_to "編集する", information_edit_path, class: "btn btn-success" %>

<br />
<table class="table table-bordered">
  <thead>
      <th>氏名</th>
      <th>カナ</th>
      <th>郵便番号</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>メールアドレス</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
    <tr>
      <td><%= @customer.last_name %>
          <%= @customer.first_name %>
        </td>
      <td><%= @customer.last_name_kana %>
          <%= @customer.first_name_kana %>
      </td>
      <td><%= @customer.postal_code %></td>
      <td><%= @customer.address %></td>
      <td><%= @customer.telephone_number %></td>
      <td><%= @customer.email %></td>
    </tr>
    </tbody>
  </table>

