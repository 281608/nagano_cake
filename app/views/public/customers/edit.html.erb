<div class="p-3 mb-2 bg-secondary text-white">
<h3>会員情報編集</h3>
</div>

<%= form_with model: @customer, url: '/customers', method: :patch do |f| %>
  <%#= render "public/shared/error_messages", resource: resource %>

<div class="field">
    <%= f.label :"氏名" %><br />
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
 </div>

 <div class="field">
   <%= f.label :"フリガナ" %><br />
   <%= f.text_field :last_name_kana %>
   <%= f.text_field :first_name_kana %>
 </div>

 <div class="field">
   <%= f.label:"郵便番号" %><br />
   <%= f.text_field :postal_code %>
 </div>

 <div class="field">
   <%= f.label:"住所" %><br />
   <%= f.text_field :address %>
 </div>

 <div class="field">
   <%= f.label:"電話番号" %><br />
   <%= f.text_field :telephone_number %>
 </div>

 <div class="field">
   <%= f.label:"メールアドレス" %><br />
   <%= f.text_field :email %>
 </div>

 <div class="text-center">
   <%= f.submit "編集内容を保存", class: "btn btn-success" %>
 </div>

 <div class="text-center">
<%= link_to "退会する", confirm_path, class: "btn btn-danger" %>
 </div>

<% end %>
